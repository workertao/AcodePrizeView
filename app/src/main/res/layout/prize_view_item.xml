<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_w0_h0_radius50_soldd_d6483d"
    android:padding="2dp">

    <ImageView
        android:id="@+id/ivUserHeader"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@mipmap/ic_user_default_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="骑着蜗牛追大象开出"
        android:textColor="#f5f5f5"
        android:textSize="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserHeader"
        app:layout_constraintLeft_toRightOf="@+id/ivUserHeader"
        app:layout_constraintTop_toTopOf="@+id/ivUserHeader" />

    <ImageView
        android:id="@+id/ivSp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserHeader"
        app:layout_constraintLeft_toRightOf="@+id/tvUserName"
        app:layout_constraintTop_toTopOf="@+id/ivUserHeader" />
</androidx.constraintlayout.widget.ConstraintLayout>